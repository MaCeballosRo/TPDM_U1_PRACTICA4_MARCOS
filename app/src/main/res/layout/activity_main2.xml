<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo2"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/numero5"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TIPS \n TO BUILD A \n LANGUAGE \n LEARNING \n HABIT"
        android:textSize="45dp"
        android:textColor="#211f1f"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="35dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="+ free \n New Habit \n Tracker!"
             android:textSize="20dp"
             android:textColor="#483f3f"
             android:textAlignment="center"
             android:fontFamily="casual"
             android:id="@+id/textofondo"
             android:layout_alignParentBottom="true"
             />

          <ImageView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:src="@drawable/rastreo"
              android:layout_alignParentBottom="true"
              android:layout_toRightOf="@id/textofondo"
              android:layout_marginHorizontal="25dp"
              />
    </RelativeLayout>
</LinearLayout>